{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ],
        "import/no-unresolved": "off",
        "no-throw-literal":"warn",
        "newline-per-chained-call": "warn"
    }
}